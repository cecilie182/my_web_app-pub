<div class="background-swap">

    <div id="contact" class="container">
        <div class="py-4 text-center">
            <h1 class="display-4">Contact</h1>
        </div>

        <hr>

        <div class="card bg-dark"
        {#style="argin-bottom: 20px; box-shadow: 0px 5px 30px 0px rgb(0 0 0);"#}
        >

            <div class="card-body my-2 mx-4">

                {{ form_start(form, {'attr': {'id': 'contact-form'}}) }}
                    <div class="form-group row">
                        {{ form_label(form.name, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="form-group row">
                        {{ form_label(form.mail, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.mail, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="form-group row">
                        {{ form_label(form.subject, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.subject, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {#{{ form_label(form.body) }}#}
                        {{ form_widget(form.body, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                    </div>

                    <button class="btn btn-primary" type="submit">Envoyer</button>
                {{ form_end(form) }}

            </div>
        </div>

    </div>

</div>